---
import SocialBanner from "$/og/landscape.png?url";
import SocialSquare from "$/og/square.png?url";
import favicon from "$/favicon.svg?url";

export const meta = {
    title: "Capítulo de Ciencia de la Computación",
    description: "Página Web del Capítulo de Ciencia de la Computación de la Universidad Católica",
};

// TODO: ordenar esto

export type Props = {
    title?: string;
    description?: string;
    image?: string;
}

const { title = meta.title, description = meta.description, image } = Astro.props as Props;
const bannerImage = SocialBanner
const scuareImage = SocialSquare
---

<!-- Preload Fonts -->
<link rel="preload" href="/fonts/Oxanium-B.ttf" as="font" type="font/ttf">
<link rel="preload" href="/fonts/Ubuntu-M.ttf" as="font" type="font/ttf">
<link rel="preload" href="/fonts/Ubuntu-R.ttf" as="font" type="font/ttf">

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg" href={favicon} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={scuareImage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={bannerImage} />