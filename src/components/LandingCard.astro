---
import ArrowLink from "~/components/ArrowLink.svelte";
import { classNames } from "~/lib/utils";

export interface Props {
	class: string;
	title: string;
	callToAction?: string;
	href: string;
}

const defaultCallToAction = "ir al listado";

const { title, callToAction = defaultCallToAction, href = "#", ...props } = Astro.props as Props;
---

<div
	class={classNames(
		"card max-w-md md:max-w-xs font-bold relative shadow transition-all hover:shadow-lg active:shadow-sm",
		props.class
	)}
>
	<div>
		<div class="font-title text-xl">{title}</div>
		<div>
			<slot />
		</div>
	</div>
	<ArrowLink href={href} action={callToAction} class="justify-end pt-4" cover />
</div>

<style>
	.card {
		@apply flex flex-col justify-between rounded stroke-white py-4 px-3 leading-tight text-white shadow;
	}
</style>
